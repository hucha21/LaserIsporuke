<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#ffffff">

    <TextView
        android:id="@+id/ParkEasily"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp"
        android:fadingEdge="horizontal"
        android:gravity="center_horizontal"
        android:soundEffectsEnabled="true"
        android:text="www.laserkitchen.ch"
        android:textColor="#A6CE39"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="220dp"
        android:layout_height="140dp"
        android:layout_marginTop="75dp"
        android:contentDescription="logo"
        android:src="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

   <!-- <pl.droidsonroids.gif.GifTextView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:background="@drawable/a" />-->
    <com.github.ndczz.infinityloading.InfinityLoading
        android:layout_width="140dp"
        android:layout_height="70dp"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        app:infl_backColor="@color/colorPrimary"
        app:infl_drawBack="true"
        app:infl_progressColor="#A6CE39"
        app:infl_reverse="true"
        app:infl_strokeWidth="6dp"
        />
</RelativeLayout>